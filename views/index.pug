doctype html
html
    head
        title SheetParser
        link(rel='stylesheet', href='/css/materialize.min.css')
        link(rel='stylesheet', href='/css/icon.css')
        link(rel='stylesheet', href='/css/style.css')
    body
        div#preload-invisible.window-invisible
        div#preload-window.z-depth-1.grey.lighten-5.window
            div.valign-wrapper(style='width:100%;height:100%;position:absolute;')
                div.valign(style='width:100%;')
                    div.container
                        div.row
                            label.left
                                span Выполнение начато
                                span#date
                        div.row
                            h6.center-align Работа в процессе
                            p.center-align#progress
                        div.row
                            div.progress
                                div.determinate
                        div.row
                            button#stop.btn.waves-effect.red

        div.valign-wrapper(style='width:100%;height:100%;position:absolute;')
            div.valign(style='width:100%;')
                div.container
                    div.row
                        div.col.s4
                            button#time.btn-small.waves-effect.waves-light Таймеры
                            button#process.btn-small.waves-effect.waves-light.disabled Процесс выполнения
                        div.col.s8
                            div.right
                                button(data-target='modal1').btn-small.waves-effect.waves-teal.scale-transition.scale-out.modal-trigger Обновить базу
                                button(data-target='modal2').btn-small.waves-effect.red.darken-2.scale-transition.scale-out.modal-trigger Удалить базу
                                button#options.btn-floating.waves-effect.waves-light.blue.darken-2
                                    i.material-icons settings
                                a(href='/logout').btn-floating.waves-effect.waves-light.red
                                    i.material-icons exit_to_app

                    div.row
                        div.col.s6
                            form(method='post', action='/', enctype='multipart/form-data')#form
                                div.file-field.input-field.col.s9
                                    div.btn-small
                                        span Файл
                                        input(type='file', accept='.xls,.xlsx, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet,' +
                                        'application/vnd.ms-excel')#excel
                                    div.file-path-wrapper
                                        input.file-path.validate(type='text', placeholder="Upload one or more files")

                                button.btn-small.waves-effect.waves-light.col.s3#send Загрузить
                                button.btn-small.waves-effect.waves-light.col.s3#percentage Проценка

                        p.center-align Информация о запчастях предоставлена системой
                            a(href='http://www.zzap.ru')  zzap
                        div.col.s6
                            h6.center Системные сообщения
                            div#info

                div#window-invisible.window-invisible
                div#window.z-depth-1.grey.lighten-5.window
                    br
                    div.row
                        div.col.s2.offset-s2
                            input(type='text').datepicker
                        div.col.s2
                            input(type='text').timepicker
                        div.col.s2
                            select#select
                                option(value='EVERYTIME') Постоянно
                                option(value='DIRECTTIME' selected) В указанное время
                        div.col.s1
                            button#add.btn.waves-effect.waves-light Добавить

                        div.col.s1.offset-s2
                            button#close.btn-floating.red
                                i.material-icons close
                    div.row
                        ul.collection#collection

                div#modal1.modal
                    div.modal-content
                        h4.green-text.text-darken-2 Обновить
                        p Эта команда заставит базу полностью обновиться и приведет к замене существующих данных
                    div.modal-footer
                        button#update.modal-action.modal-close.waves-effect.waves-green.btn-small.btn-flat Продолжить

                div#modal2.modal
                    div.modal-content
                        h4.red-text.text-darken-2 Удалить базу
                        p Эта команда приведет к полному уничтожению существующей базы данных
                    div.modal-footer
                        button#delete.modal-action.modal-close.waves-effect.waves-green.btn-small.btn-flat Продолжить
        footer
            script(src='js/build/all.js')
